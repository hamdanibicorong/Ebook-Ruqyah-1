<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUQYAH ASWAJA PAMEKASAN"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#000988"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="daftar Keluhan pasien"
                android:theme="@style/Theme.AppCompat" />

            <Button
                android:id="@+id/btn_pengenalan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="pengenalan ruqyah"
                android:textSize="14dp" />
            <Button
                android:id="@+id/btn_teknikruqyah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="Adab Meruqyah"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_adabruqyah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginVertical="100dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="ruqyah mandiri"
                android:textSize="14dp" />
            <Button
                android:id="@+id/btn_vruqyah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text=" video ruqyah " />

            <!--<Button-->
                <!--android:id="@+id/btn_nohoyali"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="10dp"-->
                <!--android:background="@drawable/styleme"-->
                <!--android:padding="20dp"-->
                <!--android:text=" hoyali " />-->

            <!--<Button-->
                <!--android:id="@+id/btn_noting_ruqyah"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="10dp"-->
                <!--android:background="@drawable/styleme"-->
                <!--android:padding="20dp"-->
                <!--android:text="Metode yang Dilarang" />-->
            <Button
                android:id="@+id/btn_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="website" />
            <Button
                android:id="@+id/btn_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/styleme"
                android:padding="20dp"
                android:text="youtube"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
